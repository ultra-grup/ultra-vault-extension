{
  "manifest_version": 3,
  "name": "Microsoft Account Login",
  "version": "1.0",
  "permissions": [
    "identity",
    "storage"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID",
    "scopes": ["openid", "profile", "User.Read"],
    "redirect_uri": "https://<extension-id>.chromiumapp.org/"
  }
}
